<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/icono_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CustomTheme"
        tools:targetApi="31">

    <!-- Actividad principal de inicio de sesi贸n -->
    <activity
        android:name=".LoginActivity"
        android:exported="true">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>

    <!-- Actividad de administraci贸n -->
    <activity
        android:name=".AdminActivity"
        android:exported="false" />

    <!-- Actividad para usuarios regulares -->
    <activity
        android:name=".UserActivity"
        android:exported="false" />

    <!-- Actividad de registro -->
    <activity
        android:name=".RegisterActivity"
        android:exported="true" />

    <!-- Actividad para mostrar juegos -->
    <activity
        android:name=".GamesActivity"
        android:exported="false" />

    <!-- Actividad adicional de opciones de administrador -->
    <activity
        android:name=".AdminOptionsActivity"
        android:exported="false" />

    <!-- Actividades de gesti贸n de usuarios -->
    <activity
        android:name=".UsersActivity"
        android:exported="false" />
    <activity
        android:name=".AdminUsersActivity"
        android:exported="false" />

    <!-- Actividad de formulario de inicio de sesi贸n -->
    <activity
        android:name=".LoginFormActivity"
        android:exported="false" />

    <!-- MainActivity no es necesaria -->
    <activity
        android:name=".MainActivity"
        android:enabled="false"
    android:exported="false" />
</application>

    </manifest>
