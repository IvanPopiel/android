<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Cd_market"
        tools:targetApi="31">

        <!-- Actividad principal de inicio de sesión -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Actividad de administración, solo accesible para usuarios administradores -->
        <activity
            android:name=".AdminActivity"
            android:exported="false" />

        <!-- Actividad para los usuarios regulares -->
        <activity
            android:name=".UserActivity"
            android:exported="false" />

        <!-- Actividad de registro de usuario -->
        <activity
            android:name=".RegisterActivity"
            android:exported="false" />

        <!-- Actividad para mostrar los juegos -->
        <activity
            android:name=".GamesActivity"
            android:exported="false" />

        <!-- Declaración de LoginFormActivity -->
        <activity
            android:name=".LoginFormActivity"
            android:exported="false" />

        <activity
            android:name=".AdminOptionsActivity"
            android:exported="false" />

        <activity
            android:name=".UsersActivity"
            android:exported="false" />

        <activity
            android:name=".AdminUsersActivity"
            android:exported="false" />
        <!-- MainActivity se desactiva porque parece que no la necesitas -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />
    </application>

</manifest>
